{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "hltas",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash.hltas",
			"match": "^\\s*\/\/.*"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "(?<=[\\s\\|])-?\\d+(?:\\.\\d+)?(?=[\\|\\s;])"
		}
	},
	"scopeName": "source.hltas"
}