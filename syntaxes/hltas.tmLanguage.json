{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "hltas",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.hltas",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"comments": {
			"name": "comment.line.double-slash.hltas",
			"match": "^\\s*\/\/.*"
		}
	},
	"scopeName": "source.hltas"
}